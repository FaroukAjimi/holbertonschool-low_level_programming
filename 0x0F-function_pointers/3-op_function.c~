/**
 *op_add - adding function
 *@a: first
 *@b: second
 *Return: a plus b
 */
int op_add(int a, int b)
{
	return (a + b);
}
/**
 *op_sub - sub function
 *@a: first
 *@b: second
 *Return: a minus b
 */
int op_sub(int a, int b)
{
	return (a - b);
}
/**
 *op_mul - mul function
 *@a: first
 *@b: second
 *Return: a by b
 */
int op_mul(int a, int b)
{
        return (a * b);
}
/**
 *op_div - division function
 *@a: first
 *@b: second
 *Return: a div b
 */
int op_div(int a, int b)
{
	return (a / b);
}
/**
 *op_mod - mdodulo
 *@a: first
 *@b: second
 *Return: a modulo b
 */
int op_mod(int a, int b)
{
	return (a % b);
}
