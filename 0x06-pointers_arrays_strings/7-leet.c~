#include "holberton.h"
/**
 * leet - kjklkjnjk
 * @s: jkgjhkhjkh.
 * Return: Always
 */
char *leet(char *s)
{
	int i = 0;
	int y;

	while (s[i] != '\0')
	{
		i++;
	}
	for (y = 0; y < i; y++)
	{
		((s[y] == 'a' || s[y] == 'A') && (*(s + y) = '4')) ||
			((s[y] == 'e' || s[y] == 'E') && (s[y] = '3')) ||
			((s[y] == 'o' || s[y] == 'O') && (s[y] = '0')) ||
			((s[y] == 't' || s[y] == 'T') && (s[y] = '7')) ||
			((s[y] == 'l' || s[y] == 'L') && (s[y] = '1'));
	}
	return (s);
}
