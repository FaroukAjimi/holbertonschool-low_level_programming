#include <stdio.h>
#include <stdlib.h>
#include "holberton.h"

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
ssize_t read_textfile(const char *filename, size_t letters)
{
	int fd;
	char *s;
	int p;
	int w;

	if (filename == NULL)
		return (0);
	s = malloc(letters);
	if (s == NULL)
		return (0);
	fd = open(filename, O_RDONLY);
	if (fd == -1)
		return (0);
	p = read(fd, s, letters);
	if (p == -1)
		return (0);
	s[p] = '\0';
	w = write(STDOUT_FILENO, s, p);
	if (w == -1 || p != w)
		return (0);
	return (w);
}
